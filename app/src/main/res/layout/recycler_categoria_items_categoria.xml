<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/titulo_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="Pizza Margarita Tradicional"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/imagen_del_producto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descripcion_del_producto"
        android:layout_width="232dp"
        android:layout_height="39dp"


        android:layout_marginEnd="36dp"
        android:text="Queso mozzarella, albahaca fresca, salsa de tomate."
        app:layout_constraintEnd_toStartOf="@+id/imagen_del_producto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/titulo_producto"
        app:layout_constraintTop_toBottomOf="@+id/titulo_producto" />

    <ImageView
        android:id="@+id/imagen_del_producto"
        android:layout_width="90dp"
        android:layout_height="79dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/precio_del_producto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titulo_producto"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/generico" />

    <TextView
        android:id="@+id/precio_del_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="232dp"
        android:layout_marginBottom="10dp"
        android:text="$4999"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toStartOf="@+id/imagen_del_producto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/descripcion_del_producto"
        app:layout_constraintTop_toBottomOf="@+id/descripcion_del_producto" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="394dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="#cdcdcd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imagen_del_producto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagen_del_producto" />
</androidx.constraintlayout.widget.ConstraintLayout>